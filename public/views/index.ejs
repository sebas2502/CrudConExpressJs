<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <link rel="stylesheet" href="./main.css">
    <title>Document</title>
</head>

<body>

    <div class="container mt-5">
        <h1 class="title">CRUD with Express JS</h1> 
        <div class="row">
            <div class="col-4">
                <div class="card p-4">
                <form action='/insertar' method="POST">
                    <div class="mb-3">
                        <label for="nombre" class="form-label">Nombre</label>
                        <input type="text" name = "nombre" class="form-control" id="nombre" aria-describedby="emailHelp">
                        
                    </div>
        
                    <div class="mb-3">
                        <label for="precio" class="form-label">Precio</label>
                        <input type="number" name = "precio" class="form-control" id="precio">
                    </div>
        
                    <div class="mb-3">
                        <label for="stock" class="form-label">Stock</label>
                        <input type="number" name = "stock" class="form-control" id="stock">
                    </div>
                    
                    <button type="submit" class="btn btn-primary d-block mx-auto w-75">Registrar</button>
                </form>
            </div>
            </div>

            <div class="col-8">
               <div class="card">
                <table class="table table-hover">
                    <thead class="bg-dark">
                        <th>Id</th>
                        <th>Nombre</th>
                        <th>Precio</th>
                        <th>Stock</th>
                        <th>Acciones</th>
                    </thead>
                    <tbody>
                       <% data.forEach((article)=>{ %>

                        <tr>
                            <td><%= article.id %></td>
                            <td><%= article.nombre %></td>
                            <td><%= article.precio %></td>
                            <td><%= article.stock %></td>
                            <td><a href='/editar/<%=article.id%>' class="editar">Editar</a><a href="/eliminar/<%=article.id%>"class="eliminar">Eliminar</a></td>
                       </tr> 
                          
                      <% }) %>
                    </tbody>
                </table>
            </div>
            </div>
        </div>
    </div>
   
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4"
        crossorigin="anonymous"></script>
        <script src='/public/index.js'></script>
        <script src="main.js"></script>
</body>

</html>